<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.TUserModel" table="t_user" schema="" catalog="vdomain">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="act">
            <column name="act" sql-type="varchar" length="40" not-null="true"/>
        </property>
        <property name="pwd">
            <column name="pwd" sql-type="varchar" length="100" not-null="true"/>
        </property>
        <property name="userName">
            <column name="user_name" sql-type="varchar" length="20"/>
        </property>
    </class>
</hibernate-mapping>